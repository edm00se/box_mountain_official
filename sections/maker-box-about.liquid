},
{
    "type": "image_picker",
    "id": "maker_icon1",
    "label": "Maker About Icon 1"
},
{
    "type": "text",
    "id": "maker_caption1",
    "label": "Maker About Caption 1",
    "default": "Backed by leading 3D printing companies."
},
{
    "type": "image_picker",
    "id": "maker_icon2",
    "label": "Maker About Icon 2"
},
{
    "type": "text",
    "id": "maker_caption2",
    "label": "Maker About Caption 2",
    "default": "Over 2,000 boxes shipped."
},
{
    "type": "image_picker",
    "id": "maker_icon3",
    "label": "Maker About Icon 3"
},
{
    "type": "text",
    "id": "maker_caption3",
    "label": "Maker About Caption 3",
    "default": "More than 100 unique filaments."
},
{
    "type": "text",
    "id": "maker_contact_text",
    "label": "Maker Contact Text",
    "default": "Have more questions about Maker Box?"
