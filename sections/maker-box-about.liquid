<div class="page-wrapper">
    <div class="maker_about_hero">
        <img src="{{section.settings.maker_about_hero_image | img_url: '900x'}}" class="maker_about_hero_image">
        <h1>{{section.settings.maker_about_hero_text}}</h1>
    </div>
    <div class="maker_about_icon_group">
        <div class="maker_icon_group">
            <img src="{{section.settings.maker_icon1 | img_url: '150x'}}">
            <p>{{section.settings.maker_caption1}}</p>
        </div>
        <div class="maker_icon_group">
            <img src="{{section.settings.maker_icon2 | img_url: '150x'}}">
            <p>{{section.settings.maker_caption2}}</p>
        </div>
        <div class="maker_icon_group">
            <img src="{{section.settings.maker_icon3 | img_url: '150x'}}">
            <p>{{section.settings.maker_caption3}}</p>
        </div>
    </div>
    <div class="page-text">
        {{page.content}}
    </div>
    <div class="maker_about_contact">
        <h2>{{section.settings.maker_contact_text}}</h2>
        <a href="{{section.settings.maker_contact_link}}">
            <button>{{section.settings.maker_about_button_text}}</button>
        </a>

    </div>
</div>

