<section class="pips-plans">
    <h1 class="pips_plans_title">{{section.settings.pips_plans_title}}</h1>
    <div class="pips_plans_grid">
        <div class="pips_item">
            <h2>{{section.settings.pips_item_title1}}</h2>
            <h1>{{section.settings.pips_item_price1}}</h1>
            <p>{{section.settings.pips_item_description1}}</p>
            <div class="pips_item_footer">
                <a href="{{section.settings.pips_product_link1}}">
                    <button>
                        {{section.settings.pips_option1}}
                    </button>
                </a>
            </div>
        </div>
        <div class="pips_item">
            <h2>{{section.settings.pips_item_title2}}</h2>
            <h1>{{section.settings.pips_item_price2}}</h1>
            <p>{{section.settings.pips_item_description2}}</p>
            <div class="pips_item_footer">
                <a href="{{section.settings.pips_product_link2}}">
                    <button>{{section.settings.pips_option2}}</button>
                </a>
            </div>
        </div>
    </div>

</section>

{% schema %}

{
    "name": "Pips Plans",
    "settings": [
        {
            "type": "text",
            "id": "pips_plans_title",
            "label": "Pips Plans Title",
            "default": "Choose Your Plan"
        },
         {
            "type": "text",
            "id": "pips_item_title1",
            "label": "Pips Item Title 1",
            "default": "Pips Calendar Box"
        }, {
            "type": "text",
            "id": "pips_item_price1",
            "label": "Pips Item Price 1",
            "default": "$39.99"
        }, {
            "type": "text",
            "id": "pips_item_description1",
            "label": "Pips Item Description 1",
            "default": "A single month of our popular Pips Calendar box! A great choice if you want to try to box without committing to a multi month subscription."
        }, {
            "type": "text",
            "id": "pips_option1",
            "label": "Pips Item 1 Button 1",
            "default": "Choose"
        },  {
            "type": "text",
            "id": "pips_item_title2",
            "label": "Pips Item Title 2",
            "default": "Mystery Dice Set with Bag"
        }, {
            "type": "text",
            "id": "pips_item_price2",
            "label": "Pips Item Price 2",
            "default": "$7.99"
        }, {
            "type": "text",
            "id": "pips_item_description2",
            "label": "Pips Item Description 2",
            "default": "One mystery complete 7 piece set and bag. Add a mystery Grab Bag to your calendar!"
        }, {
            "type": "text",
            "id": "pips_option2",
            "label": "Pips Button 1",
            "default": "Choose"
        },
        {
            "type": "url",
            "id": "pips_product_link1",
            "label": "Pips Product Link 1"
        },
        {
            "type": "url",
            "id": "pips_product_link2",
            "label": "Pips Product Link 2"
        }
        ]
    }

{% endschema %}